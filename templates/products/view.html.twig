{% extends 'base.html.twig' %}


{% block body %}

	<style>
		.width {
			display: flex;
			flex-wrap: wrap;
			width: 80%;
			margin-left: auto;
			margin-right: auto;
			box-sizing: inherit;
			margin-top: 15vh;
			
		}

		img {		
			width: 40%;	
			height: auto;
			margin-left: 10%;
			margin-right: 10%;
			
		}

		#right-side{
			width: 40%;
		}

		p {
			margin-bottom: 0;
			font-size: 20px;
		}

		#add-to-cart {
			background: black;
			color: white;
			border: none;
			width: 100%;
			padding: 10px;
			font-weight: bold;
			margin-top: 4%;
		}



	</style>

	{% for product in products %}
		<div class="width">
			<img src="{{ product.displayImage }}" alt="">
			<div id="right-side">
			<p>{{ product.brand }}</p>
			<h2>{{ product.name }}</h2>			
			<p>{{ product.price }}â‚¬</p>
			<p>{{ product.description }}</p>
			<button id="add-to-cart">Ajouter au panier</button>
			</div>
			
		</div>
	{% endfor %}

{% endblock %}


