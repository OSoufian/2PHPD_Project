{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
<style >
#Register {
    width: 60vw;
    margin-top: 3vh;
    left: 15%;
    
    background: #C4C4C4;
    align-items: center;
    border:none;
}

.form-control
{
    background: none;
    border: none;
}
#inputEmail #inputPassword {
    width: 100%;
    height: 100%;
    margin-left: auto;
    margin-right: auto;
    padding: 10px;
}

.mb-3 {
    background: none;
    border: none;
}

#login-btn {
    width: 200px;
    background: #212529;
    color: white;
    margin-left: auto;
    margin-right: auto;
}

.h3 {
    color: #212529;
    font-size: 32px;
}

</style>
{% endblock %}

{% block body %}
    <div class="card d-flex aligns-items-center" id="Register">
    <h1 style="">Register</h1>
    <form method="POST">
        {{ form_start(registrationForm) }}
            <div class="mb-3 ">
            {{ form_row(registrationForm.email) }}
            </div>
            <div class="mb-3">
            {{ form_row(registrationForm.billing_address)}}
            </div>
            <div class="mb-3">
            {{ form_row(registrationForm.delivery_address)}}
            </div>
            <div class="mb-3">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            </div>
            <div class="mb-3">
            {{ form_row(registrationForm.agreeTerms) }}
            </div>
            <div class="card-body">
                <a href="/register" class="card-link btn btn-primary">register</a>
                <button type="submit" class="btn btn-primary" >Register</button>
            </div>
        {{ form_end(registrationForm) }}


    <form>
    </div>
{% endblock %}


